{
  "name": "Liquid CSS",
  "scopeName": "source.css.liquid",
  "injectionSelector": "L:source.css",
  "injections": {
    "L:meta": {
      "patterns": [
        { "include": "source.liquid#tags" },
        { "include": "source.liquid#output" }
      ]
    },
    "L:string": {
      "patterns": [
        { "include": "source.liquid#tags" },
        { "include": "source.liquid#output" }
      ]
    }
  },
  "patterns": [
    { "include": "source.liquid#comment-inline" },
    { "include": "source.liquid#comment-block" },
    { "include": "source.liquid#tags" },
    { "include": "source.liquid#output" },
    { "include": "source.css" }
  ]
}
