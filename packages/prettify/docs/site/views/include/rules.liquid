{% assign rules = 'Global,Liquid,Markup,Style,JSON,Script' | split: ',' %}
{% assign liquid = 'commentIndent,commentNewline,correct,delimiterTrims,indentAttributes,ignoreTagList,lineBreakSeparator,normalizeSpacing,preserveCaptures,preserveComment,quoteConvert' | split: ',' %}

<div data-controller="sticky">
  <aside
    id="sidebar"
    class="drawer-panel drawer-left {{ drawer }} sidebar vh-100 br"
    data-controller="drawer">

    <div class="container-fluid g-0">
      <nav class="accordion mt-3 mb-2 bx-0" data-controller="accordion">

        {% for lang in rules %}

          <a class="accordion-btn px-3 py-2 {{ initial }}" href="{{- link.url }}">
            {{ lang }}
          </a>

          <div class="accordion-fold bt bg-gray {% if page.url == link.url %}expanded{%- endif -%}">
            <ul class="py-4 px-2  ml-0" id="{{- lang | slugify -}}">
              {% for rule in liquid %}
                <li class="pt-1 pl-3">

                  <a href="{{ rule | slugify | prepend: '#' }}">

                    {{ rule }}

                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </div>

        {%- endfor -%}
      </nav>
    </div>
  </aside>
</div>
