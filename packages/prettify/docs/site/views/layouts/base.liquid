{%- if page.url == '/' -%}
  {%- assign drawer = '' -%}
{%- else -%}
  {%- assign drawer = 'drawer-active' -%}
{%- endif -%}

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      {{ title }}
    </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{'/style.css' | url }}" rel="stylesheet">
    <script src="{{'/bundle.min.js' | url }}"></script>
  </head>
  <body>

    {%- if page.url != '/' -%}
      {% include 'navbar' %}
    {%- endif -%}

    <main class="container-fluid">
      <div class="row">
        <div class="col-auto px-0">
          {% if page.url contains '/rules' %}
            {% include 'rules' %}
          {% else %}
            {% include 'sidebar' %}
          {% endif %}
        </div>
        {{ content }}
        <div class="col-auto jc-end">
          <div class="bl">
            <ul>
              <li><a href="#">Purpose</a></li>
              <li><a href="#">Backstory</a></li>
              <li><a href="#">Why Prettify</a></li>
            </ul>
          </div>
        </div>

      </div>
    </main>

    {% svgsprite %}

  </body>
</html>
