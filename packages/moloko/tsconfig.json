{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package/**",
    "test",
    "index.mjs",
    "index.js",
    "index.d.ts"
  ],
  "include": [
    "src",
    "types",
    "node_modules/.ace/build/src/ace.js",
    "tsup.ts"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"],
  },
  "compilerOptions": {
    "incremental": false,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "types": ["./index.d.ts"],
      "utils": ["./src/utils.ts"],
      "attrs": ["./src/attrs.ts"],
      "actions": ["./src/actions.ts"],
      "store": ["./src/store.ts"],
      "editor/*": ["./src/editor/*"],
      "ace": ["node_modules/.ace/build/src/ace.js"],
      "ace/split": [
        "node_modules/.ace/build/src/ext-split.js"
      ],
      "ace/language-tools": [
        "node_modules/.ace/build/src/ext-language_tools.js"
      ],
      "ace/*": [
        "node_modules/.ace/build/src/*",
        "!node_modules/.ace/build/src/ace.js"
      ]
    }
  }
}
