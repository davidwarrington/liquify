{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package/**",
    "test",
    "index.mjs",
    "index.js",
    "index.d.ts"
  ],
  "include": [
    "src",
    "types",
    "node_modules/.ace/build/src/ace.js"
  ],
  "compilerOptions": {
    "incremental": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "ES6",
    "removeComments": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@types": ["./index.d.ts"],
      "@utils": ["./src/utils.ts"],
      "@events": ["./src/editor/events.ts"],
      "@footer": ["./src/editor/footer.ts"],
      "@attrs": ["./src/attrs.ts"],
      "@actions": ["./src/actions.ts"],
      "@store": ["./src/store.ts"],
      "@icons": ["./src/editor/icons.ts"],
      "@hash": ["./src/editor/hash.ts"],
      "@editor": ["./src/editor/editor.ts"],
      "@tabs": ["./src/editor/tabs.ts"],
      "@settings": ["./src/editor/settings.ts"],
      "ace": ["node_modules/.ace/build/src/ace.js"],
      "ace/split": [
        "node_modules/.ace/build/src/ext-split.js"
      ],
      "ace/*": [
        "node_modules/.ace/build/src/*",
        "!node_modules/.ace/build/src/ace.js"
      ]
    }
  }
}
