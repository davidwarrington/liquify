{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package",
    "test"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.mjs"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "allowJs": true,
    "declaration": true,
    "removeComments": false,
    "incremental": false,
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "package",
    "baseUrl": ".",
    "paths": {
      "@liquify/ava/parser": [
        "./node_modules/@liquify/ava/package/parser.d.ts"
      ],
    }
  }
}
